<!-- Mini Posts -->
<section>
    <div class="mini-posts">

        <!-- Mini Post -->
        {% for post in crb_miniposts %}
        <article class="mini-post">
            <header>
                <h3><a href="{{ post.link }}">{{post.name}}</a></h3>
                <time class="published" datetime="{{post.post_date | date('Y-m-d')}}">{{ post.post_date |
                    date('j F Y') }}</time>
                <a href="{{post.author.link}}" class="author"><img src="{{post.author.avatar}}"
                        alt="{{post.author}}" /></a>
            </header>
            {% if post.thumbnail %}
            <a href="{{ post.link }}" class="image">
                <img src="{{ post.thumbnail.src(medium) }}" alt="{{post.thumbnail._wp_attachment_image_alt}}" />
            </a>
            {% endif %}
        </article>
        {% endfor %}
    </div>
</section>