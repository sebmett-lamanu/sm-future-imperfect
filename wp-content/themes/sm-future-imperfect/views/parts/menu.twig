<!-- Menu -->
<section id="menu">

    <!-- Search -->
    <section>
        <form class="search" method="get" action="#">
            <input type="text" name="query" placeholder="Search" />
        </form>
    </section>

    <!-- Links -->
    <section>
        <ul class="links">
            {% for item in primary_menu.items %}
            <li class="nav-main-item {{ item.classes|join(' ') }}">
                <a class="nav-main-link" href="{{ item.link }}">
                    <h3>{{ item.title }}</h3>
                    <p>{{ item.description }}</p>
                </a>
            </li>
            {% endfor %}
        </ul>
    </section>

    <!-- Actions -->
    <section>
        <ul class="actions stacked">
            <li>
                <a href="{{function('wp_login_url')}}" class="button large fit">{{ __('Connexion', 'smfi') }}</a>
            </li>
        </ul>
    </section>

</section>